<UserControl x:Class="ezytask.shell.UserControls.DebugOutputControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Padding="3" Margin="2" BorderBrush="Black" BorderThickness="1">
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top" Height="28">
                <Button Name="fontIncrease" Click="fontIncrease_Click">
                    <Image Source="/ezytask.shell;component/Resources/font_increase.png"
                           SnapsToDevicePixels="True" Width="16" Height="16"/>
                </Button>
                <Button Name="fontDecrease" Click="fontDecrease_Click">
                    <Image Source="/ezytask.shell;component/Resources/font_decrease.png" 
                           SnapsToDevicePixels="True" Width="16" Height="16"/>
                </Button>
                <Button Name="clearLog" Click="clearLog_Click">
                    <Image
                        SnapsToDevicePixels="True" Width="16" Height="16" Source="/ezytask.shell;component/Resources/clear.png"></Image>
                </Button>
            </ToolBar>
        <TextBox Name="txtOutput" 
                 FontFamily="Consolas" 
                 FontSize="13"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 IsReadOnly="True"/>
    </DockPanel>
        </Border>
</UserControl>
